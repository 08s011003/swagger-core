# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Swagger - Root Resources Listing
GET     /api-docs.json                        controllers.ApiHelpController.getResources

GET     /api-docs.json/pet                    controllers.ApiHelpController.getResource(path = "/api-docs.json/pet")
POST    /api-docs.json/pet                    controllers.PetApiController.addPet
PUT     /api-docs.json/pet                    controllers.PetApiController.updatePet
GET     /api-docs.json/pet/findByStatus       controllers.PetApiController.findPetsByStatus(status)
GET     /api-docs.json/pet/findByTags         controllers.PetApiController.findPetsByTags(tags)
GET     /api-docs.json/pet/:petId             controllers.PetApiController.getPetById(petId)

GET     /api-docs.json/store                  controllers.ApiHelpController.getResource(path = "/api-docs.json/store")
POST    /api-docs.json/store/order            controllers.StoreApiController.placeOrder
GET     /api-docs.json/store/order/:orderId   controllers.StoreApiController.getOrderById(orderId)
DELETE  /api-docs.json/store/order/:orderId   controllers.StoreApiController.deleteOrder(orderId)

GET     /api-docs.json/user                   controllers.ApiHelpController.getResource(path = "/api-docs.json/user")
POST    /api-docs.json/user                   controllers.UserApiController.createUser
POST    /api-docs.json/user/createWithArray   controllers.UserApiController.createUsersWithArrayInput
POST    /api-docs.json/user/createWithList    controllers.UserApiController.createUsersWithListInput
GET     /api-docs.json/user/login             controllers.UserApiController.loginUser(username,password)
GET     /api-docs.json/user/logout            controllers.UserApiController.logoutUser
PUT     /api-docs.json/user/:username         controllers.UserApiController.updateUser(username)
DELETE  /api-docs.json/user/:username         controllers.UserApiController.deleteUser(username)
GET     /api-docs.json/user/:username         controllers.UserApiController.getUserByName(username)
