<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  	http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


	<!-- Application Beans -->
    <context:component-scan base-package="com.wordnik.swagger.sample"/>

    <!-- Swagger Beans -->
    <bean id="apiListingResource" class="ApiListingResource"/>
    <bean id="swaggerSerializers" class="SwaggerSerializers" scope="singleton"/>

    <!-- Swagger Configuration -->
    <bean id="beanConfig" class="BeanConfig">
        <property name="title" value="Swagger Sample App"/>
        <property name="version" value="1.0.0" />
        <property name="schemes" value="http" />
        <property name="host" value="localhost:8002" />
        <property name="basePath" value="/api"/>
        <property name="filterClass" value="com.wordnik.swagger.sample.util.ApiAuthorizationFilterImpl"/>
        <property name="resourcePackage" value="com.wordnik.swagger.sample.resource"/>
        <property name="scan" value="true"/>
    </bean>

    <!-- API Origin Filter -->
    <bean id="apiOriginFilter" class="com.wordnik.swagger.sample.util.ApiOriginFilter"/>

 </beans>
